<% stylesheet 'jquery-ui-1.7.2.custom', 'edit_contactships' -%>
<% javascript 'jquery-ui-1.7.2.custom.min', 'edit_contactships' -%>

<h1>Editing contact</h1>

<% form_tag user_path(@user), :method => :put, :id => "edit_contacts_form", :onSubmit=>'return minSelected();' do -%>
    <div id="contacts">
        <%= render 'pagination' %>
    </div>
    <%= hidden_field_tag 'email_message' %>
    <%= hidden_field_tag 'rawcids', @user.current_contact_ids.join(',') %>

    <div id="send_email_dialog" title="Send email to contacts">
      <%= text_area_tag 'message', nil, :rows => 15, :cols => 48, :class => "text ui-widget-content ui-corner-all" %>
    </div>
    <p>
    <%= hidden_field_tag 'overall_contactcount', @overall_count %>
    <%= submit_tag 'Save and Mail', :id => 'send_button' %>
    </p>
<% end -%>
<div id="sending_email_dialog" title="Sending emails">
    <div id="progressbar"> </div>
</div>
<div id="thank_you_dialog" title="Thank you">
    Your email has been sent.
</div>