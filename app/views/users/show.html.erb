<% title "User" %>

<p>
  <strong>First Name:</strong>
  <%=h @user.first_name %>
</p>
<p>
  <strong>Last Name:</strong>
  <%=h @user.last_name %>
</p>
<p>
  <strong>Address:</strong>
  <%=h @user.address %>
</p>
<p>
  <strong>State:</strong>
  <%=h @user.state %>
</p>
<p>
  <strong>City:</strong>
  <%=h @user.city %>
</p>
<p>
  <strong>Postal Code:</strong>
  <%=h @user.postal_code %>
</p>
<p>
  <strong>Height:</strong>
  <%=h @user.height %>
</p>
<p>
  <strong>Weight:</strong>
  <%=h @user.weight %>
</p>
<p>
  <strong>Is Smoker:</strong>
  <%=h @user.is_smoker %>
</p>
<p>
  <strong>Email Address:</strong>
  <%=h @user.email_address %>
</p>
<p>
  <strong>Coverage:</strong>
  <%=h @user.Coverage.coverage if !@user.coverage.nil? %>
</p>
<p>
  <strong>Coverage Period:</strong>
  <%=h @user.Coverage.coverage_years if !@user.coverage.nil? %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", users_path %>
</p>
