<% semantic_form_for @user do |f| %>
    <%= f.error_messages %>
    <% f.inputs do %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :address %>
        <%= f.input :state %>
        <%= f.input :city %>
        <%= f.input :postal_code %>
        <%= f.input :height %>
        <%= f.input :weight %>
        <%= f.input :is_smoker %>
        <%= f.input :email_address %>
        <%= f.inputs :coverage %>
        <%= f.inputs :coverage_period %>
    <% end %>
    <%= f.buttons %>
<% end %>