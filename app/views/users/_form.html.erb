<% semantic_form_for setup_user(@user) do |f| %>
    <%= f.error_messages %>
    <% f.inputs do %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :address %>
        <%= f.input :state %>
        <%= f.input :city %>
        <%= f.input :postal_code %>
        <%= f.input :height %>
        <%= f.input :weight %>
        <%= f.input :is_smoker %>
        <%= f.input :email_address %>
        <% semantic_fields_for :coverage do |c| %>
            <%= c.input :amount %>
        <% end %>
        <% semantic_fields_for :coverage_period do |c| %>
            <%= c.input :period %>
        <% end %>
    <% end %>
    <%= f.buttons %>
<% end %>